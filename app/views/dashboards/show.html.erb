<div class="container index-page">
  <h1 class="text-center">Dashboard</h1>
  <h2>Pending requests</h2>
  <% if @pending_reservations.count > 0 %>
    <%= render 'shared/dashboard_reservations', reservations: @pending_reservations %>
  <% else %>
    <h5 class="mt-2 mb-5">You don't have any pending reservations yet</h5>
  <% end %>

  <h2>Accepted requests</h2>
  <% if @accepted_reservations.count > 0 %>
    <%= render 'shared/dashboard_reservations', reservations: @accepted_reservations %>
  <% else %>
    <h5 class="mt-5">You don't have any accepted reservations yet</h5>
  <% end %>

  <h2>Declined requests</h2>
  <% if @rejected_reservations.count > 0 %>
    <%= render 'shared/dashboard_reservations', reservations: @rejected_reservations %>
  <% else %>
    <h5 class="mt-5">You don't have any declined reservations yet</h5>
  <% end %>
</div>
