<div class="container index-page">
  <% @pending_reservations.each do |reservation| %>
    <div class="card mt-3 mb-3">
      <div class="card-header d-flex justify-content-between">
        <h5>Reservation Nº: <strong><%= reservation.user_id %><%= reservation.monster_id %></strong></h5>
        <h5><strong><%= reservation.status.capitalize %></strong></h5>
      </div>
      <div class="card-body d-flex">
        <div class="w-50">
          <img src="<%= reservation.monster.photo %>" class="w-100" alt="<%= reservation.monster.name %>">
        </div>
        <div class="p-3 d-flex flex-column justify-content-between">
          <h5>Rented monster: <strong><%= reservation.monster.name %></strong></h5>
          <h5>From: <strong><%= reservation.start_date %></strong></h5>
          <h5>To: <strong><%= reservation.end_date %></strong></h5>
          <h5>Total price: <strong><%= reservation.total_price.round %> €</strong></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>
