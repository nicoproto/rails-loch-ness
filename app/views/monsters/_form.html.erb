<div class="container mt-3">
  <div class="row">
    <div class="col-xs-12 col-lg-6 offset-lg-3">
      <h2 class="text-center mb-5">Add your monster!</h2>
      <%= simple_form_for @monster do |f| %>
        <%= f.input :name %>
        <div class="row">
          <div class="col-6">
            <%= f.input :price %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= f.input :address %>
          </div>
        </div>
        <%= f.input :description%>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: "primarybtn btn-block" %>
      <% end %>
    </div>
  </div>
</div>
