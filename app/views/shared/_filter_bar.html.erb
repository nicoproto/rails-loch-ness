<div class="filter-bar d-flex">
  <div class="dropdown flex-grow-1 ml-3">
    <button class="primaryButton dropdown-toggle btn-block" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Filter By Price
    </button>
    <div class="dropdown-menu col-sm-12" aria-labelledby="dropdownMenuButton ">
      <%= link_to "Price: High to Low", filter_path(filteraction: 'price_desc',location: params[:location]), class: "dropdown-item", remote: true %>
      <%= link_to "Price: Low to High", filter_path(filteraction: 'price_asc', location: params[:location]), class: "dropdown-item", remote: true %>
    </div>
  </div>
  <div class="dropdown flex-grow-1 ml-3">
    <button class="primaryButton dropdown-toggle btn-block" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Filter By Reviews
    </button>
    <div class="dropdown-menu col-sm-12" aria-labelledby="dropdownMenuButton">
      <%= link_to "Review: High to Low", filter_path(filteraction: 'review_desc',location: params[:location]), class: "dropdown-item", remote: true %>
      <%= link_to "Review: Low to High", filter_path(filteraction: 'review_asc',location: params[:location]), class: "dropdown-item", remote: true %>
    </div>
  </div>
</div>
