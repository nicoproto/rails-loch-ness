<div class="container messages-container col-12 col-md-10 col-lg-8">
<% @messages.each do |message| %>
  <% if message.user == current_user %>
    <%= render 'shared/user_message_partial', message: message %>
  <% else %>
    <%= render 'shared/seller_message_partial', message: message %>
  <% end %>
<% end %>
  <div class="container col-12 col-md-8 col-lg-6 review-form">
  <h2 class="mb-3">Leave a question for the owner</h2>
  <!-- TO DO: Refactor this into a shared form -->
  <%= simple_form_for [@monster, @message] do |f| %>
    <%= f.input :text,
    placeholder: "Ask anything you would like to know about the monster...",
    label: false,
    :input_html => { :rows => 7 , :style => 'width: 100%'}
     %>
    <%= f.submit class: "primaryButton btn-block" %>
  <% end %>

</div>
</div>
