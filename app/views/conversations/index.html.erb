<div class="container col-12 col-md-10 col-lg-8 convo-box">
  <h2>Your conversations</h2>
  <div class="col-12 mt-3">
    <% if @conversations.count > 0 %>
    <div class="cards-container">
      <% @conversations.each do |conversation|%>
        <div class="d-flex align-items-center conversation-card mb-3 pl-2">
          <%= image_tag conversation.monster.user.avatar, height:80, width: 80, crop: :fill, class: "avatar mr-3" %>
          <div>
            <h5 class="card-title">Conversation with <%=conversation.monster.user.name %> about <%= conversation.monster.name %></h5>
            <p class="card-subtitle mb-1 pl-1">Last message at <%= conversation.updated_at %></p>
            <p class="card-subtitle pl-1">Created on <%= conversation.created_at %></p>
            <%= link_to '', conversation_path(conversation), class: "stretched-link" %>
          </div>
        </div>
      <% end %>
    </div>
    <% else %>
      <div class="card col">
        <div class="card-body">
          <p> No conversations yet!</p>
        </div>
      </div>
    <% end %>
  </div>

</div>
